@model ProductModel

<h5 class="display-4">Edit Product</h5>
<hr />
<form asp-controller="Admin" asp-action="ProductEdit" method="post">
    <div class="row">
        <div class="col-md-8">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row mb-2">
                <label class="col-form-label col-sm-3">Name:</label>
                <div class="col-sm-9">
                    <input type="text" asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-2">
                <label class="col-form-label col-sm-3">URL:</label>
                <div class="col-sm-9">
                    <input type="text" asp-for="Url" class="form-control" />
                </div>
            </div>

            <div class="form-group row mb-2">
                <label class="col-form-label col-sm-3">Description:</label>
                <div class="col-sm-9">
                    <input type="text" asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-2">
                <label class="col-form-label col-sm-3">ImageUrl:</label>
                <div class="col-sm-9">
                    <img src="~/img/@Model.ImageUrl" alt="Alternate Text" />
                    <input type="file" name="file" class="form-control"/>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-2">
                <label class="col-form-label col-sm-3">Price:</label>
                <div class="col-sm-9">
                    <input type="text" asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-2">
                <input type="hidden" name="ProductId" value="@Model.ProductId" />
                <div class="col-sm-9">
                    <button type="submit" class="btn btn-primary">Save Product</button>
                </div>
            </div>
        </div>
        <div class="col-md-4">

            @if (Model.SelectedCategories !=null)
            {
                @for (int i = 0; i < Model.SelectedCategories.Count; i++)
                {
                    <input type="hidden" name="SelectedCategories[@i].CategoryId" value="@Model.SelectedCategories[i].CategoryId" />
                    <input type="hidden" name="SelectedCategories[@i].Name" value="@Model.SelectedCategories[i].Name" />
                }
            }

            @foreach (var item in (List<Category>)ViewBag.Categories)   //viewbag içinde obje olarak atıldığından böyle yazdık
            {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" value="@item.CategoryId" name="categoryIds" id="category_@(item.CategoryId)"
                           @if (Model.SelectedCategories != null) { @(Model.SelectedCategories.Any(i => i.CategoryId == item.CategoryId) ? "checked" : "")  } />
                    <label class="form-check-label">@item.Name</label>
                </div>
            }
            <hr />
            <div class="form-check">
                <input type="checkbox" asp-for="IsApproved" class="form-check-input" />
                <label asp-for="IsApproved" class="form-check-label"></label>
            </div>
            <div class="form-check">
                <input type="checkbox" asp-for="IsHome" class="form-check-input" />
                <label asp-for="IsHome" class="form-check-label"></label>
            </div>


        </div>
</form>
