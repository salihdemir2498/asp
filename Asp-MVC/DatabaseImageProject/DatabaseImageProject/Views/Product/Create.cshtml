@model DatabaseImageProject.Models.Entities.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>Create</h1>
<div style="margin:50px 20px; font-size:25px">

    <div class="row">
        <div class="col-6">
            <form asp-action="Create">
                <div class="form-group">
                    <input type="hidden" asp-for="ProductId">
                    <label class="control-label">Product Name</label>
                    <input class="form-control" type="text" asp-for="ProductName"><br>
                    <label class="control-label">Product Price</label>
                    <input class="form-control" type="text" asp-for="ProductPrice">
                    <label class="control-label">Product İmage</label>
                    <input class="form-control" type="text" asp-for="ProductImage" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Değişiklikleri Kaydet" class="btn btn-primary">

                </div>
            </form>
        </div>

    </div>

</div>


<p>
    <a asp-action="Index">Product List</a>
</p>
