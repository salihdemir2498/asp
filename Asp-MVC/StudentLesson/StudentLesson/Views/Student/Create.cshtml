@model Student
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="display-3">Yeni Kategori Ekle</h3>


    <form asp-action="Create">

        <div class="form-group m-3">
            <div class="row">
                <div class="col-md-5 ">
                    <label class="control-label">Öğrenci No:</label>
                    <input type="text" asp-for="StudentNo" class="form-control">
                    <label class="control-label">Öğrenci Ad:</label>
                    <input type="text" asp-for="StudentName" class="form-control">
                    <label class="control-label">Öğrenci Soyad:</label>
                    <input type="text" asp-for="StudentSurname" class="form-control">
                    <label class="control-label">Öğrenci Doğum Tarihi:</label>
                    <input type="date" asp-for="StudentDateOfBirth" class="form-control">
                    <label class="control-label">Öğrenci Kayıt Tarihi:</label>
                    <input type="date" asp-for="StudentDateOfRegistration" class="form-control">
                </div>

                <div class="col-md-5">
                    <label class="control-label">Öğrenci Dönemi:</label>
                    <input type="number" asp-for="StudentPeriod" class="form-control">
                    <label class="control-label">Öğrenci Bölümü:</label>
                    <select asp-for="SectionId" class="form-control form-select" asp-items="ViewBag.Section"></select>
                </div>
            </div>
            <div class="form-group m-3">
                <input type="submit" value="Kaydet" class="btn btn-success">
            </div>
        </div>
</form>


<div>
    <a asp-action="Index">Öğrenciler Sayfasına dön</a>
</div>

