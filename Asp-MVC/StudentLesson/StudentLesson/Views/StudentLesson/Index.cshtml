@model List<StudentLesson>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table table-dark fs-1" style="width: 70%;">
    <thead>
        <tr>
            <th>Öğrenci Adı</th>
            <th>Kredi Toplamı</th>
            <th>Dönemi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

                <tr>
                    <td>@item.Student.StudentName</td>
                    <td>@item.Lesson.LessonCredit</td>
                    <td>@item.Lesson.LessonPeriod</td>

                    <td class="w-50">
                        <a class="btn btn-sm btn-success " asp-action="Details" asp-route-id="@item.StudentLessonId">Detaylar</a>
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.StudentLessonId">Düzenle</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.StudentLessonId">Sil</a>
                    </td>
                </tr>
            
        }
    </tbody>
</table>