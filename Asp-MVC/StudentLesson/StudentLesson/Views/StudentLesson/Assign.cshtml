@model StudentModel
<h5 class="display-4">Assign Lesson</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label class="col-form-label text-danger">First Name: </label>
            <label class="col-form-label">@Model.StudentName</label>
        </div>
        <div class="form-group">
            <label class="col-form-label text-danger">Last Name: </label>
            <label class="col-form-label">@Model.StudentSurname</label>
        </div>
        @*<div class="form-group">
            <label class="col-form-label text-danger">Last Name: </label>
            <label class="col-form-label">@Model.Section</label>
        </div>*@
    </div>
    <div class="col-md-8">
        @for (int i = 0; i < Model.SelectedLessons.Count; i++)
        {
            <input type="hidden" name="SelectedCourses[@i].CourseId" value="@Model.SelectedLessons[i].LessonId" />
            <input type="hidden" name="SelectedCourses[@i].Name" value="@Model.SelectedLessons[i].LessonName" />
        }
        @foreach (var item in (List<Lesson>)ViewBag.lessons)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="@item.LessonId" name="courseIds" id="course_@item.LessonId" @(Model.SelectedLessons.Any(x=>x.LessonId==item.LessonId)?"checked":"") />
                <label class="form-check-label" for="course_@item.LessonId">@item.LessonName</label>
            </div>
        }
    </div>
</div>